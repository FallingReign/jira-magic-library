{
  "name": "jira-magic-library",
  "version": "1.0.2",
  "description": "The smart, schema-aware bridge between your app and the JIRA REST API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.cjs",
    "redis:run": "docker run -d --name jml-redis -p 6379:6379 redis:7-alpine",
    "redis:start": "docker start jml-redis",
    "redis:stop": "docker stop jml-redis && docker rm jml-redis",
    "redis:ping": "docker exec jml-redis redis-cli ping",
    "redis:logs": "docker logs -f jml-redis",
    "redis:cli": "docker exec -it jml-redis redis-cli",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "validate:workflow": "node scripts/validate-workflow.js",
    "archive:epic": "node scripts/archive-epic.js",
    "install:hooks": "node scripts/install-hooks.js",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run type-check",
    "demo": "cd demo-app && node src/index.js",
    "docs:api": "typedoc",
    "example:create-bug": "ts-node examples/create-bug.ts",
    "example:error-handling": "ts-node examples/error-handling.ts",
    "example:validate-connection": "ts-node examples/validate-connection.ts"
  },
  "keywords": [
    "jira",
    "atlassian",
    "jira-api",
    "jira-rest-api",
    "jira-cloud",
    "jira-server",
    "jira-datacenter",
    "schema-driven",
    "automation",
    "issue-tracking"
  ],
  "author": "FallingReign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FallingReign/jira-magic-library.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.3.1",
    "fuse.js": "^7.1.0",
    "ioredis": "^5.8.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "ioredis-mock": "^8.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.10",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
